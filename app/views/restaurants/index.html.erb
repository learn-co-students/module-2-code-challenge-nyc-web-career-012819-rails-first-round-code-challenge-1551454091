<h1 style='margin-top:100px;font-size:2rem'>Our official restaurant directory</h1>

<h4>Search by Restaurant</h4>
<%= form_tag(restaurants_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Restaurants" %>
<%= submit_tag "Search" %>
<% end %>

<% @restaurants.each do |restaurant| %>
  <h1 style='font-size:1.5rem;margin-top:50px'>Restaurant Name:
      <%=link_to restaurant.name, restaurant %>
  </h1>
  <p>Address: <%= restaurant.address %></p>
<% end %>
