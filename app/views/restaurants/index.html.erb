<h1 style='margin-top:100px;font-size:2rem'>Our official restaurant directory</h1>

<% if flash[:error] %>
  <h4 style="color: red">Errors</h4>
  <p>
    <ul>
        <li style="color: red"><%= flash[:error] %></li>
    </ul>
  </p>
<% end %>

<%= form_tag("/restaurants/search", method: "post") do %>
  <%= label_tag :q, "Search for a restaurant:" %>
  <%= text_field_tag :q %>
  <%= submit_tag("Search") %>
<% end %>

<% @restaurants.each do |restaurant| %>
  <h1 style='font-size:1.5rem;margin-top:50px'>Restaurant Name:
      <%= link_to restaurant.name, restaurant %>
  </h1>
  <p>Address: <%= restaurant.address %></p>
<% end %>
