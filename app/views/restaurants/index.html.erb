<h1 style='margin-top:100px;font-size:2rem'>Our official restaurant directory</h1>

<%= form_tag(@restaurants_path, method: :get) do %>
  Restaurant <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Search' %>
<% end %>

<ul>
<% @restaurants.each do |restaurant| %>
  <%= link_to restaurant.name, restaurant_path(restaurant) %><br>
<% end %>
</ul>
