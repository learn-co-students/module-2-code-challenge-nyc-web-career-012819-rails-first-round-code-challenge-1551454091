<h1 style='margin-top:100px;font-size:2rem'>Our official restaurant directory</h1>

<!-- want search bar to be before list of all rest. -->
<!-- specify get method (instead of post) -->
<!-- allow user to type -->
<!-- save their response as params[:search] -->

<%= form_tag(restaurants_path, :method => :get) do %>
  <h3>SERCH FOR RESTAURANT🍕🍕🍕: </h3>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'FIND THAT RESTAURANT', name: nil%>
<% end %>
<br>


<!-- iterate through all restaurants -->
<!-- link by name -->
<!-- send them to that show page -->
<h1>ALL THE RESTAURANTS:</h1>
<% @restaurants.each do |restaurant| %>
  <h1 style='font-size:1.5rem;margin-top:50px'>Restaurant Name:
      <!-- link to the show page for each rest. -->
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
  </h1>
  <p>Address: <%= restaurant.address %></p>
<% end %>
