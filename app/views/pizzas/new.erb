<h1>Make your own pizza!</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @pizza do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :ingredients %>
  <%= f.text_field :ingredients %>
  <br>
  <%= f.label :restaurant %>
  <%= f.collection_select :restaurant_id, @restaurants, :id, :name %>
  <br>
  <%= f.submit %>

<% end %>
