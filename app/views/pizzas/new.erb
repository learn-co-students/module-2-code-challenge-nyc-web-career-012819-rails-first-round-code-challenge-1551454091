<h1>New Pizza Form:</h1>

<% if flash[:errors]  %>
<ul>
  <% flash[:errors].each do |error|  %>
    <li style="color: red"><%= error %></li>
  <% end %>
</ul>
<% end %>

<%= form_for(@pizza) do |f| %>
<%= f.label :name%>
<%= f.text_field :name %>
<%= f.label :ingredients%>
<%= f.text_field :ingredients %>
<%= f.label :restaurant %>
<%= f.collection_select(:restaurant_id, @restaurants, :id, :name, prompt: true) %>
<%= f.submit %>
<% end %>

<br>
<%= button_to("Back to Pizza Index", pizzas_path, :method => :get) %>
