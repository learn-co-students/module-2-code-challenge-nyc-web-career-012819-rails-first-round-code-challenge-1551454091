<h1>Pizza Form:</h1>

<% flash[:errors].each do |error| %>
  <%= error %>
  <% end %>
<% end %>

<% form_for @pizza  do |f| %>
  <%= f.label "Name: "
  <%= f.text_field :name %>

  <%= f.label "Ingredients: "
  <%= f.text_field :ingredients %>

  <%= f.collection_select (:restaurant_id, Restaurant.all, :id, :name) %>

  <%= f.submit %>

<% end %>
