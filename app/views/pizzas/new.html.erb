<h1>Create a New Pizza</h1>

<% if flash[:Errors] %>
<% flash[:Errors].each do |error| %>
<p><%= error %></p>
<% end %>
<% end  %>

<%= form_for @pizza do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :ingredients %>
  <%= f.text_field :ingredients %>
  <%= f.collection_select :restaurant_id, @restaurants, :id, :name %>
  <%= f.submit %>
<% end %>
